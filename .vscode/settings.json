{
  "python.autoComplete.extraPaths": [
    "/opt/ros/humble/lib/python3/dist-packages",
    "$HOME/ros_ws/install"
  ],
  "python.analysis.extraPaths": [
    "/opt/ros/humble/lib/python3/dist-packages",
    "$HOME/ros_ws/install"
  ],
  "terminal.integrated.env.linux": {
    "CMAKE_PREFIX_PATH": "/opt/ros/humble:/usr",
    "LD_LIBRARY_PATH": "/opt/ros/humble/lib:/usr/lib",
    "PYTHONPATH": "/opt/ros/humble/lib/python3/dist-packages:/usr/local/lib/python3.10/dist-packages:/usr/lib/python3/dist-packages:$HOME/ros_ws/src:$HOME/ros_ws/install"
  },
  "cmake.ignoreCMakeListsMissing": true,
  "cmake.configureOnOpen": false,
  "cmake.configureOnEdit": false,
  "C_Cpp.intelliSenseEngine": "disabled",
  "clangd.path": "/usr/bin/clangd",
  "clangd.arguments": [
    "--compile-commands-dir=build",
    "--background-index",
    "--all-scopes-completion",
    "--header-insertion-decorators",
    "--header-insertion=iwyu",
    "--completion-style=detailed",
    "--clang-tidy",
    "--pch-storage=disk", // memory
    "--limit-results=30",
    "--j=4",
    "--log=error"
  ],
  "clangd.enable": true,
  "files.associations": {
    "*.repose": "yaml",
    "*.world": "xml",
    "*.urdf": "xml",
    "*.xacro": "xml",
    "*.launch": "xml",
    "*.yaml": "yaml",
    "*.yml": "yaml",
    "jacobi": "cpp",
    "regex": "cpp",
    "typeinfo": "cpp",
    "geometry": "cpp",
    "cholesky": "cpp",
    "core": "cpp",
    "eigenvalues": "cpp",
    "householder": "cpp",
    "lu": "cpp",
    "qr": "cpp",
    "svd": "cpp",
    "stdvector": "cpp"
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "terminal.integrated.scrollback": 100000,
  "editor.minimap.enabled": false,
  "editor.mouseWheelZoom": true,
  "editor.renderControlCharacters": true,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.formatOnSave": true
  },
  "files.exclude": {
    "**/build": true,
    "**/devel": true,
    "**/install": false,
    "**/logs": true,
    "**/log": true,
    "**/.catkin_tools": true,
    "**/.cache": true,
    "**/.git": true,
    "**/.idea": true,
    "**/__pycache__": true,
    "**/.venv": true,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/build": true,
    "**/build/**": true,
    "**/devel": true,
    "**/devel/**": true,
    "**/install": true,
    "**/install/**": true,
    "**/logs": true,
    "**/logs/**": true,
    "**/log": true,
    "**/log/**": true,
    "**/.catkin_tools": true,
    "**/.cache": true,
    "**/.git": true,
    "**/__pycache__": true,
    "**/__pycache__/**": true,
    "**/.venv": true,
    "**/node_modules": true
  },
  "files.watcherExclude": {
    "**/build": true,
    "**/build/**": true,
    "**/devel": true,
    "**/devel/**": true,
    "**/install": true,
    "**/install/**": true,
    "**/logs": true,
    "**/logs/**": true,
    "**/log": true,
    "**/log/**": true,
    "**/.catkin_tools": true,
    "**/.cache": true,
    "**/.git": true,
    "**/.idea": true,
    "**/.venv/**": true,
    "**/node_modules/**": true,
    "**/__pycache__": true,
    "**/__pycache__/**": true
  },
  "python.analysis.exclude": [
    "**/build",
    "**/build/**",
    "**/devel",
    "**/devel/**",
    "**/install",
    "**/install/**",
    "**/logs",
    "**/logs/**",
    "**/log",
    "**/log/**",
    "**/.catkin_tools",
    "**/.cache",
    "**/.git",
    "**/__pycache__",
    "**/__pycache__/**",
    "**/.venv",
    "**/.venv/**",
    "**/node_modules"
  ],
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.wordBasedSuggestions": "off",
  "editor.parameterHints.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.showInlineDetails": false,
  "editor.suggest.showStatusBar": false,
  "editor.wordWrap": "on",
  "cmake.automaticReconfigure": false,
  "cmake.buildBeforeRun": false,
  "cmake.autoSelectActiveFolder": false
}
